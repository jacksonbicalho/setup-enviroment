--require spec_helper

## Default kcov (coverage) options
# --kcov-options "--include-path=., --path-strip-level=1"
# --kcov-options "--include-pattern=.sh"
--kcov-options "--exclude-pattern=/.shellspec,/spec/,/coverage/,/report/,/01-shellspec-kcov-*/,/01-shellspec-kcov-*/"

## Example: Include script "setupenv" with no extension
# --kcov-options "--include-pattern=.sh,setupenv"

## Example: Only specified files/directories
--kcov-options "--include-pattern=/lib/,/bin/"
